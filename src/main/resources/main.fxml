<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="br.univali.comp.Controller">
    <VBox>
        <HBox>
            <MenuBar>
                <Menu text="Arquivo">
                    <MenuItem text="Abrir"/>
                    <MenuItem text="Novo"/>
                    <MenuItem text="Salvar"/>
                    <MenuItem text="Salvar como..."/>
                </Menu>
                <Menu text="Edição">
                    <MenuItem text="Copiar"/>
                    <MenuItem text="Colar"/>
                    <MenuItem text="Recortar"/>
                </Menu>
                <Menu text="Compilar">
                    <MenuItem text="Compilar"/>
                    <MenuItem text="Executar"/>
                </Menu>
            </MenuBar>
        </HBox>
        <HBox>
            <ToolBar>
                <Button fx:id="newBtn">
                    <graphic>
                        <ImageView>
                            <Image url="@icons/new-48.png"/>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="openBtn" onAction="#openFileDialog">
                    <graphic>
                        <ImageView>
                            <Image url="@icons/open-48.png"/>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="saveBtn">
                    <graphic>
                        <ImageView>
                            <Image url="@icons/diskette-48.png"/>
                        </ImageView>
                    </graphic>
                </Button>
                <Separator/>
                <Button fx:id="cutBtn">
                    <graphic>
                        <ImageView>
                            <Image url="@icons/cut-48.png"/>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="copyBtn">
                    <graphic>
                        <ImageView>
                            <Image url="@icons/copy-48.png"/>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="pasteBtn">
                    <graphic>
                        <ImageView>
                            <Image url="@icons/paste-48.png"/>
                        </ImageView>
                    </graphic>
                </Button>
                <Separator/>
                <Button fx:id="buildBtn">
                    <graphic>
                        <ImageView>
                            <Image url="@icons/toolbox-48.png"/>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="runBtn">
                    <graphic>
                        <ImageView>
                            <Image url="@icons/play-48.png"/>
                        </ImageView>
                    </graphic>
                </Button>
                <Separator/>
                <Button fx:id="helpBtn">
                    <graphic>
                        <ImageView>
                            <Image url="@icons/help-48.png"/>
                        </ImageView>
                    </graphic>
                </Button>
            </ToolBar>
        </HBox>
        <VBox>
            <Label>Programa</Label>
            <HBox>
                <TextArea fx:id="inputTextArea" prefHeight="178.0" prefWidth="703.0">
                    <font>
                        <Font name="Monospaced Regular" size="13.0" />
                    </font>
                </TextArea>
            </HBox>
            <Label>Área de Mensagens</Label>
            <HBox>
                <TextArea fx:id="messageTextArea"
                          editable="false"
                          prefHeight="186.0" prefWidth="704.0"/>
            </HBox>
            <HBox>
                <Label fx:id="statusBar">Status ...</Label>
            </HBox>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </VBox>
    </VBox>


</AnchorPane>
